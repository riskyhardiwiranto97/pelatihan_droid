<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="risky.uts_android.MainActivity">

    <TextView
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/knalpot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Knalpot" />
    <EditText
        android:id="@+id/inp1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/inp2"
        android:layout_alignStart="@+id/inp2" />

    <TextView
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/velg"
        android:layout_below="@+id/inp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Velg" />
    <EditText
        android:layout_alignParentRight="true"
        android:id="@+id/inp2"
        android:layout_below="@+id/inp1"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/oli"
        android:layout_below="@+id/inp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oli Enduro" />
    <EditText
        android:layout_alignParentRight="true"
        android:id="@+id/inp3"
        android:layout_below="@+id/inp2"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/kabel"
        android:layout_below="@+id/inp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kabel Rem" />
    <EditText
        android:layout_alignParentRight="true"
        android:id="@+id/inp4"
        android:layout_below="@+id/inp3"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/spedo"
        android:layout_below="@+id/inp4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sepedometer" />
    <EditText
        android:layout_alignParentRight="true"
        android:id="@+id/inp5"
        android:layout_below="@+id/inp4"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <Button
        android:textSize="20dp"
        android:textStyle="bold"
        android:onClick="hasil"
        android:text="CETAK FAKTUR"
        android:layout_below="@+id/inp5"
        android:id="@+id/cetak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>

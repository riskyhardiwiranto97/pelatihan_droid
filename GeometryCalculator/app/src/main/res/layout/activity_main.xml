<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="risky.geometrycalculator.MainActivity">

    <Spinner
        android:id="@+id/geometry"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/input1"
        android:layout_below="@+id/geometry"
        android:layout_alignParentRight="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"/>
    <TextView
        android:id="@+id/txt1"
        android:layout_below="@+id/geometry"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/input1"
        android:text="Panjang"
        android:gravity="center_vertical"/>


    <EditText
    android:id="@+id/input2"
    android:layout_below="@id/input1"
    android:layout_alignParentRight="true"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:inputType="numberDecimal"/>
    <TextView
        android:id="@+id/txt2"
        android:layout_below="@id/input1"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content"
        android:text="Lebar"
        android:layout_alignBottom="@id/input2"
        android:gravity="center_vertical"/>

    <EditText
        android:id="@+id/input3"
        android:layout_below="@id/input2"
        android:layout_alignParentRight="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"/>
    <TextView
        android:id="@+id/txt3"
        android:layout_below="@id/input2"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content"
        android:text="Tinggi"
        android:layout_alignBottom="@id/input3"
        android:gravity="center_vertical"/>

    <Button
        android:id="@+id/tampil"
        android:layout_below="@+id/input3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tampilkan Hasil"
        android:onClick="calculate"/>
    <TextView
        android:layout_below="@id/tampil"
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
